<div class="col-md-10 col-md-offset-1">
  <div class="act-header">
     <%= @act.name %>
   <br>
  </div>
  <p class="act-image-wrapper">
    <img class="act-image-big" src=<%= @act.image %>
  </p>
  <br>
  <div class="act-details">
    <li>Genre: <%= @act.genre %></li>
    <li><%=link_to "Website",  @act.website %></li>
  </div>
  <br>
  <div class="act-description">
    <%= @act.description %>
  </div>

<div class="container-fluid">
   <% @act.events.each do |event|%>
   <h1><%= event.date %></h1>
   <ul>
     <li> <%= event.time_period %></li>
     <li><%= link_to event.venue.name,venue_path(event.venue), :"data-no-turbolink" => true %></li>
   </ul>
   <% end %>
</div>
<br>
<br>
</div>

<%= @act.songs.first.html.html_safe %>
