<%= render "layouts/errors", :object => @act %>


<%= form_for @act do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <br>
    <%= f.text_area :description, rows: "7", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :genre%>
    <%= f.text_field :genre, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :image%>
    <%= f.text_field :image, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :website%>
    <%= f.text_field :website, class: "form-control"%>
  </div>
    <%= f.submit "Submit", class: "btn btn-default center-block" %>
  <% end %>
  